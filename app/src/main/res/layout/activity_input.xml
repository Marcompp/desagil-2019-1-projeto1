<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputActivity">
    




    <TextView
        android:id="@+id/morseView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        tools:text="Morse" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/border"
        android:text="Seu texto serÃ¡ traduzido aqui"
        android:textAlignment="center"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnMorse"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="1.25dp"
        android:layout_marginEnd="1.25dp"
        android:background="@drawable/custom_button"
        android:text=".-"
        android:textSize="30sp" />


    <Button
        android:id="@+id/space"
        android:layout_width="105dp"
        android:layout_height="67dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="1.25dp"
        android:background="@drawable/custom_button"
        android:drawableStart="@drawable/space"
        android:paddingStart="35dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="105dp"
        android:layout_height="67dp"
        android:layout_marginTop="-67dp"
        android:layout_marginStart="126.25dp"
        android:background="@drawable/custom_button"
        android:drawableStart="@drawable/icon"
        android:paddingStart="35dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/delete"
        android:layout_width="105dp"
        android:layout_height="67dp"
        android:layout_marginTop="-67dp"
        android:paddingStart="35dp"
        android:layout_marginStart="252.5dp"
        android:background="@drawable/custom_button"
        android:drawableStart="@drawable/delete"
        android:textAllCaps="false" />





</LinearLayout>